{
	"name": "teasim-boilerplate",
	"npmName": "TeasimBoilerplate",
	"version": "0.0.1-alpha",
	"description": "teasim boilerplate",
	"author": "Billgo",
	"license": "MIT",
	"scripts": {
		"preinstall": "node ./scripts/npmcheckversion.js",
		"postinstall": "npm run build:dll",
		"start": "cross-env NODE_ENV=development babel-node ./node_modules/teasim-scripts/server",
		"start:sample": "start-sample -p 6060",
		"start:mocker": "setmockers start 3030",
		"prebuild": "rimraf ./build",
		"build": "cross-env NODE_ENV=production webpack --config ./node_modules/teasim-scripts/lib/webpack/webpack.prod.babel.js --color -p --progress --hide-modules",
		"build:dll": "node ./node_modules/teasim-scripts/lib/scripts/dependencies.js",
		"build:sample": "build-sample",
		"build:mocker": "setmockers build 3030",
		"build:static": "setmockers static",
		"sample": "npm run start:sample",
		"mocker": "npm run start:mocker",
		"lint": "npm run lint:js && npm run lint:style",
		"lint:js": "prettier-eslint --write app/**/*.{js,jsx}",
		"lint:style": "stylelint-config-prettier-check app/**/*.{css,less}",
		"test": "NODE_ENV=test jest"
	},
	"babel": {
		"presets": [
			[
				"common",
				{
					"modules": "commonjs"
				}
			]
		],
		"comments": false,
		"minified": true
	},
	"jest": {
		"verbose": true,
		"moduleFileExtensions": ["js", "jsx"],
		"moduleDirectories": ["node_modules", "app"],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
			"\\.(css|less|scss)$": "<rootDir>/mocks/styleMock.js"
		},
		"testPathIgnorePatterns": ["/node_modules/", "/build/", "/lib/", "/umd/"],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
		"testEnvironment": "enzyme",
		"setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
		"unmockedModulePathPatterns": ["react", "enzyme", "jest-enzyme"],
		"transform": {
			"^.+\\.js$": "babel-jest"
		}
	},
	"eslintConfig": {
		"rules": {
			"prettier/prettier": "error"
		},
		"plugins": ["babel", "prettier"],
		"extends": ["plugin:prettier/recommended", "prettier/flowtype", "prettier/react", "prettier/standard"],
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"env": {
			"browser": true,
			"node": true,
			"jest": true,
			"es6": true
		}
	},
	"stylelint": {
		"extends": "stylelint-config-prettier",
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": ["extends"]
				}
			],
			"block-no-empty": null,
			"unit-whitelist": ["em", "rem", "s"]
		}
	},
	"dllPlugin": {
		"path": "node_modules/teasim-boilerplate-dlls",
		"exclude": ["chalk", "compression", "cross-env", "express", "ip", "minimist"],
		"include": ["core-js", "eventsource-polyfill"]
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/node": "^7.2.2",
		"babel-core": "^7.0.0-bridge",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^24.1.0",
		"babel-preset-common": "^0.0.13",
		"cross-env": "^5.2.0",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.10.0",
		"eslint": "^5.15.1",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "^24.1.0",
		"jest-cli": "^24.1.0",
		"jest-environment-enzyme": "^7.0.1",
		"jest-enzyme": "^7.0.1",
		"prettier": "1.16.4",
		"prettier-eslint": "^8.8.2",
		"prettier-eslint-cli": "^4.7.1",
		"prettier-stylelint": "^0.4.2",
		"rimraf": "^2.6.3",
		"stylelint": "^9.10.1",
		"stylelint-config-prettier": "^5.0.0",
		"teasim-fackers": "^6.0.0",
		"teasim-mockers": "^6.0.0",
		"teasim-samples": "^6.0.0",
		"teasim-scripts": "^6.0.0"
	},
	"dependencies": {
		"connected-react-router": "^6.3.1",
		"immutable": "^4.0.0-rc.12",
		"intl": "^1.2.5",
		"isomorphic-fetch": "^2.2.1",
		"moment": "^2.24.0",
		"prop-types": "^15.7.2",
		"react": "^16.8.4",
		"react-dom": "^16.8.4",
		"react-intl": "^2.8.0",
		"react-redux": "^6.0.1",
		"react-router": "^4.3.1",
		"react-router-dom": "^4.3.1",
		"react-router-redux": "^5.0.0-alpha.8",
		"redux": "^4.0.1",
		"redux-immutable": "^4.0.0",
		"redux-logger": "^3.0.6",
		"redux-saga": "^1.0.2",
		"reselect": "^4.0.0",
		"teasim": "^6.0.0",
		"teasim-plugins": "^6.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/teasim/boilerplate.git"
	}
}
