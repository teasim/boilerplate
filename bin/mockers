#!/usr/bin/env node

const program = require('commander');

const start = require('../internals/genmocker/start');
const build = require('../internals/genmocker/build');
const staticFunc = require('../internals/genmocker/static');
const pkg = require('../package.json');

program.version(pkg.version)
  .option('start', 'Start mocker api docs website.')
  .option('build', 'Build mocker api docs website.')
  .option('static', 'Transfer current project request.js to support static mocker data.')
  .parse(process.argv);

if (program.start) {
  start(process.argv);
}

if (program.build) {
  build(process.argv);
}

if (program.static) {
  staticFunc(process.argv);
}
